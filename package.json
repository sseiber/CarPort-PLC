{
    "name": "carport-service",
    "version": "3.2.20",
    "type": "module",
    "description": "Car Port garage door controller service",
    "engines": {
        "node": ">=20.0.0"
    },
    "main": "dist/index.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "lint": "eslint .",
        "build": "tsc --build --verbose",
        "build:all": "tsc --build --force --verbose",
        "build:schemas": "rm -f ./src/models/schemas/*.* && node ./.scripts/buildTypeSchemas.cjs --types-file ../src/models/carportTypes.ts",
        "clean": "tsc --build --clean && npm run clean:all",
        "clean:all": "./.scripts/clean-all.sh",
        "dockerbuild": "npm run build && node ./.scripts/dockerBuild.js -b -r .",
        "dockerpush": "node ./.scripts/dockerBuild.js -p -r .",
        "preversion": "npm test",
        "version": "npm run dockerbuild",
        "postversion": "npm run dockerpush"
    },
    "keywords": [
        "automation",
        "iot"
    ],
    "author": "sseiber",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git@github.com:sseiber/CarPort-Service.git"
    },
    "dependencies": {
        "@fastify/autoload": "^6.3.1",
        "@fastify/sensible": "^6.0.3",
        "commander": "^14.0.0",
        "env-schema": "^6.0.1",
        "fastify": "^5.5.0",
        "fastify-plugin": "^5.0.1",
        "fs-extra": "^11.3.1",
        "node-libgpiod": "0.5.3",
        "pino-pretty": "^13.1.1",
        "serialport": "^13.0.0",
        "simple-statistics": "^7.8.8",
        "uuid": "^11.1.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.33.0",
        "@stylistic/eslint-plugin": "^5.2.3",
        "@types/fs-extra": "^11.0.4",
        "@types/node": "^24.3.0",
        "commander": "14.0.0",
        "eslint": "^9.33.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-unicorn": "^60.0.0",
        "eslint-scope": "^8.4.0",
        "fs-extra": "^11.3.1",
        "globals": "^16.3.0",
        "ts-json-schema-generator": "^2.4.0",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.40.0"
    }
}